@using RunGroupWebApp.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<div class="py-lg-16 py-10 bg-gray-200 py-5"
     style="height: 500px; background: url('https://images.pexels.com/photos/1526790/pexels-photo-1526790.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1')no-repeat; background-size: cover; background-position: center">
    <div class="container">
        <!-- row -->
        <div class="d-flex justify-content-center align-items-bottom text-center">
            <div class="col-md-9 col-12">
                <!-- heading -->
                <h2 class="display-4 text-white font-weight-medium font-weight-bold">Join more than 1 million runners worldwide</h2>
                <p class="lead px-lg-12 mb-6 text-white font-weight-bold">
                    Effective way of having fun with friends. Take care of your health right now.
                </p>
                <!-- button -->
                <div class="d-grid d-md-block">
                    <a class="btn btn-light mb-2 mb-md-0" asp-area="" asp-controller="Account" asp-action="Register">Join us NOW!</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--end of section-->
<section>
    <div class="container">
        @if (Model.Clubs == null)
        {
            <h1 class="fw-light m-5">
                There are no running clubs in your area! In @Model.State <a asp-area="" asp-controller="Account" asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-center my-5 bg-light py-4">
                <div class="col-auto">
                    <h3>Running clubs near @Model.City, @Model.State</h3>
                </div>

            </div>
            <ul class="row feature-list feature-list-sm py-5 bg-light" style="list-style-type: none">
                @foreach (var item in Model.Clubs)
                {
                    <li class="col-12 col-md-6 col-lg-4 mb-5">
                        <div class="card">
                            <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id">
                                <img class="card-img-top" src="@item.Image" alt="Card image cap">
                            </a>
                            <div class="card-body">
                                <h4 class="card-title">@item.Title</h4>
                                <p class="card-text text-body">@item.Description</p>
                            </div>
                            <div class="card-footer card-footer-borderless d-flex justify-content-between">
                                <div class="text-small">
                                    <ul class="list-inline">
                                        <i class="fa-solid fa-heart"></i>
                                        <i class="fa-solid fa-message"></i>
                                    </ul>
                                </div>
                                <div class="dropup">
                                    <a type="btn btn-success" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    <div class="dropdown-menu dropdown-menu-sm" aria-labelledby="SidekickButton">
                                        <a class="dropdown-item" href="#">Save</a>
                                        <a class="dropdown-item" href="#">Share</a>
                                        <a class="dropdown-item" href="#">Comment</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Report</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
<section class="container">
</section>



